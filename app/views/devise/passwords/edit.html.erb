<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <div>
        <h2>Change your password</h2>
      </div>
      <div>
        <%= simple_form_for(resource, as: resource_name, url:
        password_path(resource_name), html: { method: :put }) do |f| %> <%=
        f.error_notification %> <%= f.input :reset_password_token, as: :hidden
        %> <%= f.full_error :reset_password_token %>
      </div>

      <div class="form-inputs">
        <%= f.input :password, label: "New password", required: true, autofocus:
        true, hint: ("#{@minimum_password_length} characters minimum" if
        @minimum_password_length), input_html: { autocomplete: "new-password" }
        %> <%= f.input :password_confirmation, label: "Confirm your new
        password", required: true, input_html: { autocomplete: "new-password" }
        %>
      </div>

      <button type="button" class="btn btn-warning">
        <div class="form-actions">
          <%= f.button :submit, "Change my password" %>
        </div>
      </button>

      <div class=""><% end %> <%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>
