<head>
  <title>Trainspotters Int'l | List of entries </title>
</head>

<br />

<h1>List of entries</h1>

<div class="row">
  <% @trains.each do |train| %>

  <%= link_to train do %>

  <div class="col-6 offset-3">
    <div class="card-train">
      <% if train.photo.key %>
      <%= cl_image_tag train.photo.key %>
      <% else %>
      <%= image_tag "https://via.placeholder.com/500x250.jpg" %>
      <% end %>
      <br />
      <br />
      <div>
        <h2>Manufacturer:</h2>
        <p><%= train.manufacturer %></p>
      </div>
      <div>
        <h2>Series:</h2>
        <p><%= train.series %></p>
      </div>
      <div>
        <h2>Main operator:</h2>
        <p><%= train.main_operator %></p>
      </div>
    </div>
  </div>

  <% end %>
  <% end %>
</div>

<%= render "shared/footer" %>
<%= render "devise/shared/links" %>
