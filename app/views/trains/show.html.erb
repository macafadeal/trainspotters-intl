<head>
  <title>Trainspotters Int'l | Entry details </title>
</head>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card-train">
      <% if @train.photo.key %>
      <%= cl_image_tag @train.photo.key %>
      <% else %>
      <%= image_tag "https://via.placeholder.com/500x250.jpg" %>
      <% end %>
      <div>
        <h2>Manufacturer:</h2>
        <p><%= @train.manufacturer %></p>
      </div>
      <div>
        <h2>Series:</h2>
        <p><%= @train.series %></p>
      </div>
      <div>
        <h2>Main operator:</h2>
        <p><%= @train.main_operator %></p>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
<%= render "devise/shared/links" %>
